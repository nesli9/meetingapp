@{
    ViewBag.Title = "Başvuru Formu";
}
<h1 class="h4 text-center">Toplantı Katılım Formu</h1>
<form action="">
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" name="Name" id="Name form-control">
    </div>
    <div class="mb-3">
        <label for="Phone" class="form-label">Phone</label>
        <input type="text" name="Phone" id="Phone form-control">
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="email" name="Email" id="Email form-control">
    </div>
    <div class="mb-3">
        <label for="WillAttend" class="form-label">Will Attend</label>
        <select name="WillAttend" id="WillAttend" class="form-select">
            <option value="true">Yes</option>
            <option value="false">No</option>

        </select>
    </div>
    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>